<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:TBW.Todo.Agent.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="TBW.Todo.Agent.Views.MainView"
			 x:DataType="vm:MainViewModel"
			 >
	<Design.DataContext>
		<vm:MainViewModel />
	</Design.DataContext>

	<Grid RowDefinitions="Auto,*,Auto" Margin="12">
		<!--标题栏-->
		<Border Grid.Row="0" Padding="12" Background="#7160E8" CornerRadius="8" Margin="0,0,0,8" >
			<Grid ColumnDefinitions="*, Auto">
				<TextBlock Text="📅 Todo AI 智能助手" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" />
				<Button Grid.Column="1" Content="🗑️ 清空" Background="Transparent" Foreground="White" VerticalAlignment="Center" Command="{Binding ClearCommand}" />
			</Grid>
		</Border>

		<!--联调消息区-->
		<Border Grid.Row="1" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Padding="4" >
			<ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="ChatScroller">
				<ItemsControl ItemsSource="{Binding Messages}" Margin="4" >
					<ItemsControl.ItemTemplate>
						<DataTemplate x:DataType="vm:ChatMessageViewModel" >
							<Border Margin="4,4" Padding="12, 8" CornerRadius="12" MaxWidth="420" Background="{Binding IsUser, Converter={x:Static vm:BoolToBubbleColorConverter.Instance}}" HorizontalAlignment="{Binding IsUser ,Converter={x:Static vm:BoolToAlignmentConverter.Instance}}">
								<StackPanel>
									<!--角色 + 时间-->
									<Grid ColumnDefinitions="*, Auto">
										<TextBlock Grid.Column="0" Text="{Binding RoleDisplay}" FontSize="18" Opacity="0.8" />
										<TextBlock Grid.Column="1" Text="{Binding Timestamp}" FontSize="9" Opacity="0.4" />
									</Grid>
									<TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="14" Margin="0,4,0,0" />

								</StackPanel>
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
		</Border>

		<!--加载状态-->
		<ProgressBar Grid.Row="1" IsIndeterminate="True" IsVisible="{Binding IsBusy}" VerticalAlignment="Bottom" Height="3" Margin="0,0,0,1" />

		<!--输入区-->
		<Grid Grid.Row="2" ColumnDefinitions="*, Auto" Margin="0,8,0,0">
			<TextBox Grid.Column="0" Text="{Binding UserInput}" AcceptsReturn="False" CornerRadius="28" Padding="16,10" FontSize="14" IsEnabled="{Binding !IsBusy}" KeyDown="OnInputKeyDown" />
			<Button Grid.Column="1" Content="{Binding IsBusy, Converter={x:Static vm:BusyToTextConverter.Instance}}" Command="{Binding SendCommand}" Margin="8,0,0,0" Padding="20,10" CornerRadius="20" Background="#7160E8" Foreground="White" FontWeight="Bold" />
		</Grid>
	</Grid>
</UserControl>
